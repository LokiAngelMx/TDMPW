<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMPW_1P_PR02.celcius"
             Title="Celcius">
    <VerticalStackLayout>
        <Label 
            Text="Celcius a Kelvin y a Fahrenheit"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Large"/>

        <Image
            Source="celcius.png"
            HorizontalOptions="Center"
            WidthRequest="400"
            HeightRequest="400"
            Margin="0, 30, 0, 30"/>

        <Label
            Text="Ingrese una cantidad en °C"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Medium"
            Margin="0, 0, 0, 10"/>

        <Entry
            x:Name="txtCelcius"
            Text="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="300"/>

        <Button
            x:Name="btnCelcius"
            Text="Convertir"
            WidthRequest="200"
            FontSize="Medium"
            Margin="0, 30, 0, 10"
            Clicked="btnCelcius_Clicked"/>

        <Label x:Name="txtResultadoKelvin"
            Text="Kelvin"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Medium"
            WidthRequest="300"
            Margin="30"/>

        <Label x:Name="txtResultadoFahrenheit"
            Text="Fahrenheit"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Medium"
            WidthRequest="300"
            Margin="30"/>
    </VerticalStackLayout>
</ContentPage>
