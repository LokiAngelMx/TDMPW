<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMPW_1P_PR04.Iva"
             Title="Iva">
    <VerticalStackLayout>
        <Image
            Source="iva.png"
            HeightRequest="200"
            />
        <Label 
            Text="Calcula el IVA"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="txtMonto"
            Text="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Medium"
            />
        <Button x:Name="btnConvertir"
                Text="Calcular"
                Clicked="btnConvertir_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="Medium"
                Margin="20"
                />
        <Label
            x:Name="txtResultado"
            Text="El resultado es: "
            FontSize="Medium"
            HorizontalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>
